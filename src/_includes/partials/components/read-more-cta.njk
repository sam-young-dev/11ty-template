<article class="read-more">
  <div class="[ wrapper ] [ flow ]">
    <div>
      <h2>Read this next</h2>
      <hr />
    </div>

    <div class="auto-grid">
      {% for item in postListItems %}
        <a href={{ item.url }} class="[ read-more-post ] [ link-secondary ]">
          <h4 class="heading">{{ item.data.title }}</h4>
          <p class="read-more-post__author">By: {{ item.data.author }}</p>
        </a> 
      {% endfor %}
    </div>
  </div>
</article>